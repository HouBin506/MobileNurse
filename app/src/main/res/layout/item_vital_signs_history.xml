<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--体征数据历史记录-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_vitalSignsHistory_time"
            style="@style/text_gray_level4"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_1"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/tv_item_vitalSignsHistory_name"
            style="@style/text_gray_level4"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_1"
            android:layout_weight="1.8"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_item_vitalSignsHistory_value"
            style="@style/text_gray_level4"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_1"
            android:layout_weight="2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_item_vitalSignsHistory_unit"
            style="@style/text_gray_level4"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_1"
            android:layout_weight="1.2"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_vitalSignsHistory_memo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            style="@style/text_lightBlack_level3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/field_memo" />

        <TextView
            android:id="@+id/tv_item_vitalSignsHistory_memo"
            style="@style/text_gray_level3"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1"
            android:text="我是备注信息" />
    </LinearLayout>
</LinearLayout>
