<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/dp_20">

    <ImageView
        android:id="@+id/img_item_tool_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"></ImageView>

    <TextView
        android:id="@+id/tv_item_tool_name"
        style="@style/text_lightBlack_level4"
        android:layout_below="@+id/img_item_tool_image"
        android:layout_centerHorizontal="true"
        android:lines="1"></TextView>

</RelativeLayout>