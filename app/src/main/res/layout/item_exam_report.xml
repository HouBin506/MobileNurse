<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_examReport_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_dp_0_5"
        android:background="@color/gray_divider"></View>

    <LinearLayout
        android:id="@+id/ll_item_examReport_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_examReport_className"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="X线左胫腓骨"
                android:textColor="@color/bg_royalBlue"
                android:textSize="@dimen/text_content_level_2" />

            <TextView
                android:id="@+id/tv_examReport_resultStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="已执行状态"
                android:textColor="@color/light_black"
                android:textSize="@dimen/text_content_level_4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/requestDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/field_requestDateTime"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_content_level_6" />

                <TextView
                    android:id="@+id/tv_examReport_requestDateTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="2019-08-28 11:20"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_content_level_6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/scheduledDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/field_scheduledDateTime"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_content_level_6" />

                <TextView
                    android:id="@+id/tv_examReport_scheduledDateTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="2019-08-28 11:20"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_content_level_6" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/examNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/field_examNo"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_content_level_6" />

                <TextView
                    android:id="@+id/tv_examReport_examNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="1234567890"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_content_level_6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/performDept"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/field_performDept"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_content_level_6" />

                <TextView
                    android:id="@+id/tv_examReport_performDept"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="尿流动力学检查室"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_content_level_6" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_examReport_itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:text="★CT上肢单侧平扫(含肢带骨、上臂、前臂、手部)+三维重建+骨三维成像"
        android:textColor="@color/light_black"
        android:textSize="@dimen/text_content_level_3" />
</LinearLayout>