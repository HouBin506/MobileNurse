<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_dialog_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/view_horizontal_margin_parent"
        android:layout_marginTop="@dimen/view_vertical_margin_brother"
        android:layout_marginRight="@dimen/view_horizontal_margin_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_singleInputDialog_inputDesc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/view_horizontal_margin_brother"
            android:gravity="center_vertical"
            android:text="服务器地址"
            android:textColor="@color/black"
            android:textSize="@dimen/text_content_level_4" />

        <EditText
            android:id="@+id/et_singleInputDialog_input"
            style="@style/editText_common"></EditText>
    </LinearLayout>

    <include layout="@layout/include_dialog_bottom"></include>
</LinearLayout>