<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srl_operationScheduled_refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.sickbed.SickbedListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_operationScheduled_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/bg_lightGrayB">

            <TextView
                android:id="@+id/tv_operationScheduled_operationType"
                style="@style/text_blue_level3"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:text="急诊" />

            <TextView
                android:id="@+id/tv_operationScheduled_time"
                style="@style/text_blue_level3"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:drawableRight="@drawable/ic_calendar_small_blue"
                android:gravity="center"
                android:text="当日" />
        </RelativeLayout>

        <ListView
            android:id="@+id/lv_operationScheduled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>