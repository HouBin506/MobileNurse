<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_includeHealthEdu_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_newbornBasicInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_newbornBasicInfo1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/view_horizontal_margin_screen"
            android:layout_marginRight="@dimen/view_horizontal_margin_screen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_newbornBasicInfo_LabelAndName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_level_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_newbornBasicInfo2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/view_horizontal_margin_screen"
            android:layout_marginRight="@dimen/view_horizontal_margin_screen"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rl_newbornBasicInfo_babyId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_babyId"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:text="@string/field_patientID" />

                <TextView
                    android:id="@+id/tv_newbornBasicInfo_babyId"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent"></View>

            <LinearLayout
                android:id="@+id/rl_newbornBasicInfo_babySex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_babySex"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:text="@string/field_sex" />

                <TextView
                    android:id="@+id/tv_newbornBasicInfo_babySex"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_newbornBasicInfo_birthDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_horizontal_margin_screen"
            android:layout_marginRight="@dimen/view_horizontal_margin_screen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_birthDateTime"
                style="@style/text_lightBlack_level2"
                android:layout_gravity="center_vertical"
                android:text="@string/field_birthDateTime" />

            <TextView
                android:id="@+id/tv_newbornBasicInfo_birthDateTime"
                style="@style/text_lightBlack_level2"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_patientBasicInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_patientBasicInfo1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/view_horizontal_margin_screen"
            android:layout_marginRight="@dimen/view_horizontal_margin_screen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_patientBasicInfo_LabelAndName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_level_1" />

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_patientBasicInfo_patientCondition"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/view_horizontal_margin_brother"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_patientBasicInfo_nursingClass"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_bg_text_red"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_content_level_6" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_patientBasicInfo2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/view_horizontal_margin_screen"
            android:layout_marginRight="@dimen/view_horizontal_margin_screen"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rl_patientBasicInfo_age"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:text="@string/field_age" />

                <TextView
                    android:id="@+id/tv_patientBasicInfo_age"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent"></View>

            <LinearLayout
                android:id="@+id/rl_patientBasicInfo_patientId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_patientId"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:text="@string/field_patientID" />

                <TextView
                    android:id="@+id/tv_patientBasicInfo_patientId"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_patientBasicInfo3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/view_horizontal_margin_screen"
            android:layout_marginRight="@dimen/view_horizontal_margin_screen"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rl_patientBasicInfo_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sex"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:text="@string/field_sex" />

                <TextView
                    android:id="@+id/tv_patientBasicInfo_sex"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent"></View>

            <LinearLayout
                android:id="@+id/rl_patientBasicInfo_chargeType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_chargeType"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:text="@string/field_chargeType" />

                <TextView
                    android:id="@+id/tv_patientBasicInfo_chargeType"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_patientBasicInfo4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/view_horizontal_margin_screen"
            android:layout_marginRight="@dimen/view_horizontal_margin_screen"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rl_patientBasicInfo_admission"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_admission"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:text="@string/field_admission" />

                <TextView
                    android:id="@+id/tv_patientBasicInfo_admission"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent"></View>

            <LinearLayout
                android:id="@+id/rl_patientBasicInfo_identity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_identity"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:text="@string/field_identity" />

                <TextView
                    android:id="@+id/tv_patientBasicInfo_identity"
                    style="@style/text_lightBlack_level2"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_orders_totalCosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_horizontal_margin_screen"
            android:layout_marginRight="@dimen/view_horizontal_margin_screen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_totalCosts"
                style="@style/text_lightBlack_level2"
                android:layout_gravity="center_vertical"
                android:text="@string/field_incurredCosts" />

            <TextView
                android:id="@+id/tv_patientBasicInfo_totalCosts"
                style="@style/text_lightBlack_level2"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_orders_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_horizontal_margin_screen"
            android:layout_marginRight="@dimen/view_horizontal_margin_screen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_telephone"
                style="@style/text_lightBlack_level2"
                android:layout_gravity="center_vertical"
                android:text="@string/field_telephone" />

            <TextView
                android:id="@+id/tv_patientBasicInfo_telephone"
                style="@style/text_lightBlack_level2"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_orders_wardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_horizontal_margin_screen"
            android:layout_marginRight="@dimen/view_horizontal_margin_screen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wardName"
                style="@style/text_lightBlack_level2"
                android:layout_gravity="center_vertical"
                android:text="@string/field_wardName" />

            <TextView
                android:id="@+id/tv_patientBasicInfo_wardName"
                style="@style/text_lightBlack_level2"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>