<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_bpViewLx_itemName"
        style="@style/text_gray_level3"
        android:background="@drawable/ic_bg_drop_down_textview"
        android:gravity="center"
        android:text="血压1" />

    <LinearLayout
        android:id="@+id/ll_bpViewLx_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@drawable/shape_bg_edittext_black"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_bpViewLx_inputLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textSize="@dimen/text_content_level_3"></EditText>

        <View
            android:layout_width="@dimen/line_size_dp_0_5"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2"
            android:background="@color/gray_divider"></View>

        <EditText
            android:id="@+id/et_bpViewLx_inputRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textSize="@dimen/text_content_level_3"></EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bpViewLx_suffix"
        style="@style/text_lightBlack_level3"
        android:layout_gravity="center_vertical"
        android:text="mmHg" />
</LinearLayout>
