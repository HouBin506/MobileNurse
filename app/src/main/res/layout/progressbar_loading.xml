<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_progressBar_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_progressBar_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/animated_progressbar_loading_medium" />

    <TextView
        android:id="@+id/tv_progressBar_loadingDesc"
        style="@style/text_gray_level4"
        android:layout_gravity="center_horizontal"
        android:text="@string/message_loading" />
</LinearLayout>
