<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_mnListPopupWindow_prefix"
        style="@style/text_lightBlack_level3"
        android:layout_gravity="center_vertical"
        android:text="氧流量：" />

    <TextView
        android:id="@+id/tv_mnListPopupWindow_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/ic_bg_drop_down_textview"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_content_level_3" />

    <TextView
        android:id="@+id/tv_mnListPopupWindow_suffix"
        style="@style/text_lightBlack_level3"
        android:layout_gravity="center_vertical"
        android:text="L/min" />
</LinearLayout>
