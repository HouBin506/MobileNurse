<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl_admAssess_refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@color/bg_lightGrayR">

            <TextView
                android:id="@+id/tv_recordTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/common_recordingTime"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_level_1" />

            <TextView
                android:id="@+id/tv_admAssess_recordTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/tv_recordTime"
                android:drawableRight="@drawable/ic_calendar_small_blue"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_content_level_1" />

        </RelativeLayout>


        <com.herenit.mobilenurse.custom.widget.layout.MNAssessListView
            android:id="@+id/elv_admAssess_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:divider="@null"
            android:groupIndicator="@null"></com.herenit.mobilenurse.custom.widget.layout.MNAssessListView>
    </LinearLayout>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>