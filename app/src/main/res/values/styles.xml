<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 控件选中颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
    </style>

    <style name="Animation_Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_right_to_center</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_center_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_left_to_center</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_center_to_right</item>
    </style>

    <style name="text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_title_level_1</item>
    </style>

    <style name="text_lightBlack_level2_matchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:paddingLeft">@dimen/view_horizontal_margin_parent</item>
        <item name="android:textSize">@dimen/text_content_level_2</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_lightBlack_level2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_content_level_2</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_lightBlack_level3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/view_horizontal_margin_parent</item>
        <item name="android:textSize">@dimen/text_content_level_3</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_gray_level4_matchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:paddingLeft">@dimen/view_horizontal_margin_parent</item>
        <item name="android:textSize">@dimen/text_content_level_4</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_gray_level4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/view_horizontal_margin_parent</item>
        <item name="android:textSize">@dimen/text_content_level_4</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_lightBlack_level4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/view_horizontal_margin_parent</item>
        <item name="android:textSize">@dimen/text_content_level_4</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="text_gray_level3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_content_level_3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_gray_level2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_content_level_2</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_blue_level3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_content_level_3</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="text_blue_level1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_content_level_1</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="text_title_white_level1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_title_level_1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_title_white_level2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_title_level_2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_title_white_level3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_title_level_3</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_title_white_level6">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_content_level_6</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editText_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:background">@drawable/shape_bg_edittext_black</item>
    </style>

    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">@dimen/dp_8</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/layer_seekbar_horizontal</item>
        <item name="android:minHeight">@dimen/dp_8</item>
        <item name="android:thumb">@mipmap/ic_seek_thumb</item>
        <item name="android:thumbOffset">@dimen/dp_10</item>
    </style>
</resources>
